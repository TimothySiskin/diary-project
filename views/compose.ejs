<%- include('./partials/header.ejs') -%>
<div class="container">
  <h1>Compose</h1>
  <form method="POST">
    <div class="form-group">
      <label for="blog-title" class="form-label">Title</label>
      <input
        type="text"
        name="blogTitle"
        id="blog-title"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="form-textarea" class="form-label">Post</label>
      <textarea
        id="form-textarea"
        class="form-control"
        rows="3"
        name="blogText"
        placeholder="Post text"
      >
Post Text</textarea
      >
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>
</div>

